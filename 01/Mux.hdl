/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel,out=Notsel);
    And(a=a,b=Notsel,out=aNotsel);
    And(a=b,b=sel,out=bsel);
    Or(a=bsel,b=aNotsel,out=out);
    // Put your code here:
}